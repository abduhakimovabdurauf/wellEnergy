  background: #0056b3;
}

.remove-btn {
  background: #ff4d4d;
  color: white;
  border: none;
  padding: 8px 12px;
  cursor: pointer;
  border-radius: 5px;
  transition: 0.3s;
}

.remove-btn:hover {
  background: #cc0000;
}

